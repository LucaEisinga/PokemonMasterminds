<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonMasterminds.Pages.Lobby"
             Title="Lobby">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="LightBlue" Offset="0.1"/>
            <GradientStop Color="LightGreen" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <StackLayout Margin="20" Spacing="10">
            <Label Text="Pokemon masterminds"
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description="Masterminds text"
                   FontSize="50"
                   FontFamily="Cascadia Code"
                   HorizontalOptions="Center" />

            <StackLayout HorizontalOptions="Center" HeightRequest="100" Orientation="Horizontal">
                <Label Text="Player 1"
                       SemanticProperties.Description="Text player one"
                       FontSize="25"
                       FontFamily="Cascadia Code"
                       WidthRequest="100"
                       VerticalOptions="Center" />

                <Entry Placeholder="Enter player name"
                       Text="{Binding Player1Name}"
                       FontSize="25"
                       FontFamily="Cascadia Code"
                       WidthRequest="200"
                       VerticalOptions="Center" />
            </StackLayout>

            <!-- Repeat the above StackLayout for other players -->
            <!-- Player 2 -->
            <StackLayout HorizontalOptions="Center" HeightRequest="100" Orientation="Horizontal">
                <Label Text="Player 2"
                       SemanticProperties.Description="Text player two"
                       FontSize="25"
                       FontFamily="Cascadia Code"
                       WidthRequest="100"
                       VerticalOptions="Center" />

                <Entry Placeholder="Enter player name"
                       Text="{Binding Player2Name}"
                       FontSize="25"
                       FontFamily="Cascadia Code"
                       WidthRequest="200"
                       VerticalOptions="Center" />
            </StackLayout>

            <!-- Repeat for Player 3 and Player 4 -->

            <Button x:Name="RedirectBtn"
                    Text="Start game"
                    SemanticProperties.Hint="Goes to start of the game"
                    SemanticProperties.HeadingLevel="Level5"
                    Clicked="OnRedirectClicked"
                    HorizontalOptions="Center"
                    BorderColor="DarkCyan"
                    BackgroundColor="DarkCyan"/>
        </StackLayout>
    </ScrollView>
</ContentPage>